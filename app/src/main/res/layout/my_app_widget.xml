<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/appwidget_root"
    android:orientation="horizontal"
    android:background="@color/transparent_white">

    <ImageView
        android:id="@+id/appwidget_thumb"
        android:transitionName="painting"
        android:contentDescription="@string/app_name"
        android:layout_width="@dimen/thumb_size"
        android:adjustViewBounds="true"
        android:layout_marginLeft="8dp" android:layout_marginStart="8dp"
        android:scaleType="centerCrop"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" android:layout_alignParentStart="true"
        android:layout_height="@dimen/thumb_size"
        android:background="@drawable/thumb_default"/>

    <TextView
        style="@style/WidgetTextView"
        android:id="@+id/appwidget_text"
        android:contentDescription="@string/appwidget_text"
        android:textStyle="normal"
        android:text="@string/appwidget_text"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginEnd="8dp"
        android:layout_toRightOf="@+id/appwidget_thumb" android:layout_toEndOf="@+id/appwidget_thumb"
        android:layout_alignTop="@+id/appwidget_thumb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



</RelativeLayout>